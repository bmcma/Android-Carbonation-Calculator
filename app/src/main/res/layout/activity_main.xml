<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/mainLayout"
    android:background="@drawable/beer_keg"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:drawableLeft="@drawable/foamy_beer_40x42"
        android:text="@string/convert"
        android:onClick="convert"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/tempEditText"
        android:hint="@string/enterTemp"
        android:textColorHint="#000000"
        android:textSize="@dimen/abc_text_size_large_material"
        android:gravity="center_horizontal"
        android:layout_above="@+id/button"
        android:layout_marginBottom="67dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/co2EditText"
        android:hint="@string/desiredCo2"
        android:textColorHint="#000000"
        android:textSize="@dimen/abc_text_size_large_material"
        android:gravity="center_horizontal"
        android:layout_above="@+id/button"
        android:layout_marginBottom="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:id="@+id/psiTextView"
        android:textColor="#000000"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/styles"
        android:id="@+id/button2"
        android:onClick="recommend"
        android:drawableLeft="@drawable/foamy_beer_50x55"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
